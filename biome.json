{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "ignore": [
      "**/.vscode/",
      "**/.DS_Store",
      "**/node_modules/",
      "./.cache",
      "./build",
      "./server-build",
      "./public/build",
      "./coverage",
      "./test-results/",
      "./playwright-report/",
      "./playwright/.cache/"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/.vscode/",
      "**/.DS_Store",
      "**/node_modules/",
      "./.cache",
      "./build",
      "./server-build",
      "./public/build",
      "./coverage",
      "./test-results/",
      "./playwright-report/",
      "./playwright/.cache/"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": { "useBlockStatements": "off" },
      "complexity": { "noStaticOnlyClass": "off" }
    },
    "ignore": [
      "**/.vscode/",
      "**/.DS_Store",
      "**/node_modules/",
      "./.cache",
      "./build",
      "./server-build",
      "./public/build",
      "./coverage",
      "./test-results/",
      "./playwright-report/",
      "./playwright/.cache/"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all"
    }
  }
}
